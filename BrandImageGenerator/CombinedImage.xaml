<UserControl x:Class="BrandImageGenerator.CombinedImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid Margin="0">
        <Image x:Name="BrandingImage" Height="300" Margin="0" Width="600" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Border x:Name="GuestBorder" BorderThickness="7" BorderBrush="black" Height="210" Width="210" Margin="20,45" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF" >
            <Image x:Name="GuestImage" Height="196" Width="196" />
        </Border>
    </Grid>
</UserControl>
